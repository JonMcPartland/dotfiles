#!/usr/local/bin/bash
# ################ #
# Message Aliasing #
# ################ #
# add/rm contacts (prefixed aliases)
contact() {
  if [[ $1 == add ]]; then
    echo "CONTACT[$2]=\"$3\"" >> ~/.bashfiles/.bash_contact_db
  elif [[ $1 == rm ]]; then
    grep -v 'CONTACT\['$2'\]="' ~/.bashfiles/.bash_contact_db > ~/.bashfiles/.temp_contacts; mv ~/.bashfiles/.temp_contacts ~/.bashfiles/.bash_contact_db
    echo "Contact removed."
  else
    echo "Incorrect arguments."
    echo "To add a contact, do: contact add \"Name\" \"+001234567890\"."
    echo "To remove a contact, do: contact rm \"Name\" (case sensitive)."
  fi
}

declare -A CONTACT
