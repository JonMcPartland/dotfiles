#!/usr/bin/env bash

# nice opts
for OPTION in nocaseglob histappend cdspell autocd globstar; do
  shopt -s "$OPTION" 2> /dev/null
done
unset OPTION


# Prepend timestamp to history
HISTTIMEFORMAT="%d/%m/%y %T "


# binary paths
export PHANTOMJS_BIN=/usr/local/bin/phantomjs
export RBENV_ROOT=/usr/local/var/rbenv
export PYTHONPATH=/usr/local/bin/python


# sources @todo: fix dirname
for FILE in ~/.dotfiles/{bin/*,bin}/bash-*; do
  test -f $FILE && . $FILE
done


# remove path dupes
type _tidyUpPath &> /dev/null && _tidyUpPath


# evil
type rbenv   &> /dev/null && eval "$(rbenv init -)"
type thefuck &> /dev/null && eval "$(thefuck --alias)"
