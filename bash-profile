#!/usr/local/bin/bash

# Prepend timestamp to `history`
HISTTIMEFORMAT="%d/%m/%y %T "

# sources
for FILE in ~/.dotfiles/bin/bash-*; do
  if [[ -r $FILE && -f $FILE ]]; then
    . $FILE
  fi
done
unset FILE

eval "$(rbenv init -)"
eval "$(thefuck --alias)"

test -e ${HOME}/.iterm2_shell_integration.bash && source ${HOME}/.iterm2_shell_integration.bash

if [[ -f ~/.dotfiles/lib/bash-preexec ]]; then
  . ~/.dotfiles/lib/bash-preexec

  preexec() {
    printf "$(tput sc)$(tput cuu1)$(tput cuu1)\
$(tput bold)$(tput setaf 7)[$(tput setaf 0)$(date +"%H:%M")$(tput bold)$(tput setaf 7)] \
$(tput rc)$(tput sgr0)"
  }
fi
