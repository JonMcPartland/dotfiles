#!/usr/local/bin/bash

PATH="\
/usr/local/bin:\
/usr/local/git/bin:\
/usr/local/mysql/bin:\
/usr/bin:\
/bin:\
/usr/local/sbin:\
/usr/sbin:\
/sbin:\
/opt/X11/bin:\
${PATH}\
"

# remove path dupes
if [[ -n $PATH ]]; then
  old_PATH=$PATH:; PATH=

  while [[ -n $old_PATH ]]; do
    x=${old_PATH%%:*}    # the first remaining entry

    case $PATH: in
      *:"$x":*) ;;       # already there
      *) PATH=$PATH:$x;; # not there yet
    esac

    old_PATH=${old_PATH#*:}
  done

  PATH=${PATH#:}

  unset old_PATH x
fi
