#!/usr/local/bin/bash

export PHANTOMJS_BIN=/usr/local/bin/phantomjs
export RBENV_ROOT=/usr/local/var/rbenv
export PYTHONPATH=/usr/local/bin/python

PATH="\
$HOME/.rbenv/bin:\
$HOME/.rbenv/shims:\
$HOME/.composer/vendor/bin:\
/usr/local/bin:\
/usr/local/git/bin:\
/usr/local/mysql/bin:\
/usr/bin:\
/bin:\
/usr/local/sbin:\
/usr/sbin:\
/sbin:\
/opt/X11/bin:\
${PATH}\
"

# remove path dupes
if [[ $PATH ]]; then
  OLD_PATH=$PATH:; PATH=

  while [[ $OLD_PATH ]]; do
    x=${OLD_PATH%%:*}    # the first remaining entry

    case $PATH: in
      *:"$x":*) ;;       # already there
      *) PATH=$PATH:$x;; # not there yet
    esac

    OLD_PATH=${OLD_PATH#*:}
  done

  PATH=${PATH#:}

  unset OLD_PATH x
fi
