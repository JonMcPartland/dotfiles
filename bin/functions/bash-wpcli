#!/usr/bin/env bash

function regen {
  _fancyLine 'OK' 'Enter media to regenerate'
  read -r images
  _fancyLine 'OK' 'Enter site url, if required'
  read -r url
  _fancyLine 'OK' 'Enter site path, if required'
  read -r path

  if [ "$url" ]; then
    url="--url=$url"
  else
    url=''
  fi

  if [ "$path" ]; then
    path="--path='$path'"
  else
    path=''
  fi

  wp media regenerate --skip-delete --yes "$images" "$url" "$path"
}
