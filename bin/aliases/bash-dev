#!/usr/bin/env bash

alias lls="ls -AeGl"
alias ungz="tar -zxvf"
alias dogz="tar -zcvf"
alias nw="/Applications/node-webkit.app/Contents/MacOS/node-webkit"
alias shoot="webkit2png -F -W 1280 -D ~/Desktop"
alias sync="browser-sync start --proxy "

alias restart="sudo httpd -k restart"
alias hosts="sudo subl /etc/hosts"
alias apacheconf="subl /usr/local/apache2/conf"
alias phpconf="subl /usr/local/etc/php/7.0"
alias vhost="subl /usr/local/etc/apache2/vhosts"
alias logs="subl /private/var/log/apache2/"
alias flush="sudo killall -HUP mDNSResponder"

alias grind="valgrind --track-origins=yes"
