#!/usr/bin/env bash

alias abort='git merge --abort'
alias amend='git commit --amend -m'
alias branches='git branch -vvv --sort=-committerdate'
alias comp='gl --date=relative'
alias conflicts="gs | grep -e '^UU' --color=always"
alias dateof='git show -s --format=%ci'
alias ga='git add --all'
alias gb='git blame'
alias gc='git commit -m'
alias gd='git diff'
alias gdn='git pull'
alias gf='git fetch --all'
alias gl='git log --pretty=format:"%C(yellow)%h%Creset - %C(green)%<(14,trunc)%cr%Creset - %C(blue)%<(15,trunc)%an%Creset - %C(white)%<(80,trunc)%s"'
alias gll='gl | grep -vi merge | less -R'
alias gpu='git push --set-upstream'
alias gs='git status --short'
alias gup='git push'
alias merge='git merge'
alias pick='git cherry-pick'
alias switch='git checkout'
alias trymerge='git merge --no-commit --no-ff'
alias uu='conflicts'
